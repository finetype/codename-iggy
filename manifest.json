{
  "manifest_version": 2,

  "name": "mindseal",
  "description": "A Chrome extension for creating and reviewing flash cards",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Create a card"
  },
  "permissions": [
    "identity", 
    "https://accounts.google.com/*", 
    "https://www.googleapis.com/*"
  ],
  "oauth2": {
    "client_id": "GET_THIS_FROM_GOOGLE_DEVELOPER_CONSOLE",
    "scopes": ["https://www.googleapis.com/auth/plus.login"]
  }
}